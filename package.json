{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@1.22.0",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "doppler:dev": "doppler run -- next dev",
    "format": "prettier --write \"src/**/*.(js|mjs|cjs|jsx|ts|tsx|vue|css|scss|sass|html|json|json5|jsonc|yml|yaml|md|markdown|graphql|gql|ng)\"",
    "pre-commit": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^18",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9",
    "eslint-config-next": "15.2.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.3",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,tsx,vue}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{css,scss,sass,html,json,json5,jsonc,yml,yaml,md,markdown,graphql,gql,ng}": [
      "prettier --write"
    ]
  }
}
